<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/report_radioBtn_boss"
            android:layout_width="90dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/malgun"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="방장"/>

        <RadioButton
            android:id="@+id/report_radioBtn_participant"
            android:layout_width="90dp"
            android:fontFamily="@font/malgun"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="참여자"/>
    </RadioGroup>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/malgun"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="닉네임"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:textSize="18sp"
            android:id="@+id/report_nickname"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/malgun"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="신고 유형"/>
        <Spinner
            android:id="@+id/report_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/malgun"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:entries="@array/report_spinner_array"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_report_reason"
        android:visibility="gone"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/malgun"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="신고 사유"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:textSize="18sp"
            android:id="@+id/report_reason"/>
    </LinearLayout>

</LinearLayout>