<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/r_name"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tmon_black"
        android:drawableLeft="@drawable/store_img_resize"
        android:drawablePadding="10dp"
        android:textSize="40sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boss"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tmon_black"
        android:drawableLeft="@drawable/bullet_resize"
        android:drawablePadding="10dp"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tmon_black"
        android:drawableLeft="@drawable/bullet_resize"
        android:drawablePadding="10dp"
        android:textSize="25sp"
        android:id="@+id/r_category"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tmon_black"
        android:drawableLeft="@drawable/bullet_resize"
        android:drawablePadding="10dp"
        android:textSize="25sp"
        android:id="@+id/od_time"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tmon_black"
        android:drawableLeft="@drawable/bullet_resize"
        android:drawablePadding="10dp"
        android:textSize="25sp"
        android:id="@+id/del_loc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tmon_black"
        android:drawableLeft="@drawable/bullet_resize"
        android:drawablePadding="10dp"
        android:textSize="25sp"
        android:id="@+id/del_link"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_marginTop="20dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textColor="#F0D252"
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/participate"
                android:text="참여하기"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/malgun"
                android:layout_margin="15dp"/>

            <Button
                android:id="@+id/ord_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F0D252"
                android:background="#000000"
                android:text="주문현황"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/malgun"
                android:layout_margin="15dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chatting"
                android:textColor="#F0D252"
                android:background="#000000"
                android:text="채팅하기"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/malgun"
                android:layout_marginBottom="15dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remove_room"
                android:textColor="#F0D252"
                android:background="#000000"
                android:text="삭제하기"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/malgun"
                android:layout_marginBottom="15dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/complete_deliver"
                android:textColor="#F0D252"
                android:background="#000000"
                android:text="배달완료"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/malgun"
                android:layout_span="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"/>

        </TableRow>
    </TableLayout>

</LinearLayout>