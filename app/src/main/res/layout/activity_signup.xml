<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달/N"
        android:paddingTop="5dp"
        android:layout_marginBottom="85dp"
        android:paddingBottom="5dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColor="#F0D252"
        android:background="#000000"
        android:fontFamily="@font/tmon_black"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal" >

        <TextView
            android:fontFamily="@font/malgun"
            android:textStyle="bold"
            android:text="이메일"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/edge"
            android:id="@+id/signupActivity_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal" >

        <TextView
            android:fontFamily="@font/malgun"
            android:textStyle="bold"
            android:text="비밀번호"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/edge"
            android:id="@+id/signupActivity_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal" >

        <TextView
            android:fontFamily="@font/malgun"
            android:textStyle="bold"
            android:text="닉네임"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:background="@drawable/edge"
            android:id="@+id/signupActivity_edittext_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:fontFamily="@font/malgun"
        android:textColor="#F0D252"
        android:background="#000000"
        android:layout_margin="20dp"
        android:text="가입하기"
        android:textStyle="bold"
        android:textSize="17sp"
        android:id="@+id/signupActivity_button_signup"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</LinearLayout>